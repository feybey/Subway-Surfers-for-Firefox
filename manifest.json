{
  "manifest_version": 2,
  "name": "subwaySurfersFirefox",
  "version": "1.0",

  "description": "Adds subway surfers.",

  "icons": {
    "48": "icons/surfingIcon.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.mozilla.org/*"],
      "js": ["subwaySurf.js"]
    }
  ],

  "browser_action": {
    "default_icon": "icons/surfingIcon.png"
  },
  "permissions": ["activeTab"]
}
